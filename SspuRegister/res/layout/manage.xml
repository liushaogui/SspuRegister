<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eee"
        android:orientation="vertical" >
        
        <LinearLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="@drawable/title_bar"
  			android:gravity="center_horizontal|center_vertical"  >  
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="管理"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />       
			</LinearLayout>
		<ScrollView 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:scrollbarStyle="outsideOverlay" 
    		 >
        	<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="vertical" >
            		<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            		    android:layout_marginTop="14dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/search_bar_bg">
            			<TextView
            			    android:id="@+id/managecourse" 
        					android:layout_width="fill_parent" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="课程管理"
        					android:textSize="17sp"	
        					android:clickable="true"
        					android:onClick="managecourse"	
							android:textColor="#000" />
            			<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:clickable="true"
        					
        					android:src="@drawable/mm_submenu_normal" />      					
      				</RelativeLayout>
      				
            		
      				
            		<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:layout_marginTop="14dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/search_bar_bg">
            			<TextView
            			    android:id="@+id/manageabsent" 
        					android:layout_width="fill_parent" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="事假管理"
        					android:clickable="true"
        					android:onClick="manageabsent"	
        					android:textSize="17sp"		
							android:textColor="#000" />
            			<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:clickable="true"
        					android:src="@drawable/mm_submenu_normal" />      					
      				</RelativeLayout>
      				
            		<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            		    android:layout_marginTop="14dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/search_bar_bg">
            			<TextView
            			    android:id="@+id/manageontime" 
        					android:layout_width="fill_parent" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="出勤率"
        					android:clickable="true"
        					android:onClick="manageontime"	
        					android:textSize="17sp"		
							android:textColor="#000" />
            			<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:clickable="true"
        					android:src="@drawable/mm_submenu_normal" />      					
      				</RelativeLayout>
      				
            		<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:layout_marginTop="14dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/search_bar_bg">
            			<TextView
            			    android:id="@+id/managedownload" 
        					android:layout_width="fill_parent" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="数据库同步"
        					android:clickable="true"
        					android:onClick="managedownload"	
        					android:textSize="17sp"		
							android:textColor="#000" />
            			<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:clickable="true"
        					android:src="@drawable/mm_submenu_normal" />      					
      				</RelativeLayout>
            		
            		<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:layout_marginTop="14dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/search_bar_bg">
            			<TextView
            			    android:id="@+id/textView2"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="摄像头"
        					android:textSize="17sp"		
							android:textColor="#000" />
            			<CheckBox
            		        android:id="@+id/checkphone"
            		        android:layout_width="wrap_content"
            		        android:layout_height="wrap_content"
            		        android:layout_alignParentRight="true"
            		        android:onClick="checkphone"
            		        android:layout_alignTop="@+id/textView2"
            		        android:text="开关" />  					
      				</RelativeLayout>
      				
            		<RelativeLayout
            		    android:layout_width="fill_parent"
            		    android:layout_height="wrap_content"
            		    android:layout_marginTop="14dp"
            		    android:background="@drawable/search_bar_bg"
            		    android:clickable="true"
            		    android:gravity="center_vertical" >

            		    <TextView
            		        android:id="@+id/textView1"
            		        android:layout_width="fill_parent"
            		        android:layout_height="wrap_content"
            		        android:padding="8dp"
            		        android:text="语音播报"
            		        android:textColor="#000"
            		        android:textSize="17sp" />

            		    <CheckBox
            		        android:id="@+id/checksound"
            		        android:layout_width="wrap_content"
            		        android:layout_height="wrap_content"
            		        android:layout_alignParentRight="true"
            		        android:layout_alignTop="@+id/textView1"
            		        android:onClick="checksound"
            		        android:text="开关" />
            		    
            		</RelativeLayout>
            		
            		<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:layout_marginTop="14dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:onClick="mode"	
            			android:background="@drawable/search_bar_bg">
            			<TextView
            			    android:id="@+id/managedownload" 
        					android:layout_width="fill_parent" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="当前状态"
        					android:textSize="17sp"		
							android:textColor="#000" />
            							
      				</RelativeLayout>

      	</LinearLayout>
      				
    </ScrollView>
</LinearLayout>
