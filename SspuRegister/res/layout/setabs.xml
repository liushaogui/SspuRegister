<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/setabs_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/confirm_dialog_bg2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:textColor="#333"
            android:textSize="20sp"
            android:text="设置提示" />
        
        <TextView
            android:id="@+id/setabsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_marginTop="1dp"
            android:padding="10dp"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="退出后，信息将停止同步\n确定要退出？" /> 
        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:layout_marginTop="33dp"
            android:layout_marginBottom="8dp"
             >
            
            <Button
              android:id="@+id/setabsBtn0"
              android:layout_width="110dp"
              android:layout_height="wrap_content"
              android:text="事假"
              android:textSize="16sp"
              android:textColor="#fff"
              android:background="@drawable/btn_style_alert_dialog_button_pressed"
              android:gravity="center"
			  android:onClick="setabsbutton0"
              />
            
            <Button
              android:id="@+id/setabsBtn1"
              android:layout_width="110dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text="缺卡"
              android:textSize="16sp"
              android:textColor="#333"
              android:background="@drawable/btn_style_alert_dialog_button_normal"
              android:gravity="center"
			  android:onClick="setabsbutton1"
              />
        </LinearLayout>

    </LinearLayout>
